---
import Search from "@astrojs/starlight/components/Search.astro";
import type { Props } from "@astrojs/starlight/props";
import ThemeToggle from "./ThemeToggle.astro";
import { HeaderMenu } from "./header-menu";
import LanguageSelect from '@astrojs/starlight/components/LanguageSelect.astro';
---
<div>
  <nav class="border-b bg-background w-screen px-6 navbar">
    <div class="flex justify-between items-center h-full w-full">
      <div>
        <a
          href="/"
          class="flex items-center gap-2"
          aria-label="Astro documentation"
        >
          <div class="w-8 h-8 flex items-center justify-center">
            <img src="/newlogo.png" alt="logo" class="w-full h-full" />
          </div>
          <h4 class="text-xl flex items-center gap-2 font-extrabold">
            NoCaptcha Ai
          </h4>
        </a>
      </div>

      <div class="hidden lg:flex lg:flex-1 lg:justify-center mx-4">
        <Search {...Astro.props} />
      </div>

      <div class="hidden lg:flex items-center">
        <a
        href="https://discord.com/invite/E7FfzhZqzA"
        type="button"
        target="_blank"
        rel="noopener noreferrer"
        class="hidden bg-primary dark:bg-primary/10 h-8 rounded-full px-4 py-1.5 text-sm
  lg:inline-flex items-center justify-center border whitespace-nowrap
  font-medium transition-colors focus-visible:outline-none focus-visible:ring-1
  focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50
  border-primary text-primary-foreground dark:text-primary gap-2 mr-2"
      >
        <span class="text-slate-300 flex items-center gap-2">
          Discord
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-3 h-3"
        >
          <path d="m9 18 6-6-6-6"></path>
        </svg>
      </span>

      </a>
        <a
          href="https://github.com/noCaptchaAi"
          type="button"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden bg-primary dark:bg-primary/10 h-8 rounded-full px-4 py-1.5 text-sm
    lg:inline-flex items-center justify-center border whitespace-nowrap
    font-medium transition-colors focus-visible:outline-none focus-visible:ring-1
    focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50
    border-primary text-primary-foreground dark:text-primary gap-2 mr-2"
        >
        <span class="text-slate-300 flex items-center gap-2">
          GitHub
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-3 h-3"
          >
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </span>

        </a>

        <a
        href="https://t.me/noCaptchaAi"
        type="button"
        target="_blank"
        rel="noopener noreferrer"
        class="hidden bg-primary dark:bg-primary/10 h-8 rounded-full px-4 py-1.5 text-sm
  lg:inline-flex items-center justify-center border whitespace-nowrap
  font-medium transition-colors focus-visible:outline-none focus-visible:ring-1
  focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50
  border-primary text-primary-foreground dark:text-primary gap-2 mr-2"
      >
      <span class="text-slate-300 flex items-center gap-2">
        Telegram
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-3 h-3"
        >
          <path d="m9 18 6-6-6-6"></path>
        </svg>
      </span>

      </a>
        <ThemeToggle {...Astro.props} />
        <LanguageSelect {...Astro.props}/>
      </div>

      <div class="flex">
        <div class="flex lg:hidden gap-2 items-center">
          <Search {...Astro.props} />
          <HeaderMenu client:load />
          <ThemeToggle {...Astro.props} />
        </div>
      </div>
    </div>
  </nav>
</div>

<style>
  .navbar {
    @apply h-14;
  }

  @media (min-width: 50rem) {
    .navbar {
      @apply h-16;
    }
  }
</style>
